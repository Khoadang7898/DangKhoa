    <!--  Phần nội dung phần phụ 1 -->
    <article class="post-body">
        <h3 id="_articleSection56" itemprop="articleSection">* Mì Quảng</h3>

        <span itemscope itemtype="http://schema.org/Article"
              itemref="_name1 _author2 _datePublished3 _articleSection60">
            <figure class="text-center">
                <meta itemprop="image"
                      content="https://thongtindulich.azurewebsites.net/images/my-quang.webp">
                <img class="img-fluid rounded" src="/images/my-quang.webp"
