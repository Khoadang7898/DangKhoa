                    <!--Thẻ bạn bè-->
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Bạn bè</h4>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled team-members">
                                <% bigdata.forEach(function (pt) {
                                data[0].FriendList.forEach(function(phantu) {
                                if ( pt._id.toString() == phantu.toString()) {
                                %>
                                    <li>
                                        <div class="row">
                                            <div class="col-md-2 col-2">
                                                <div class="avatar">
                                                    <img src="<%= pt.Image %>"
                                                         alt="Circle Image"
                                                         class="img-circle img-no-padding img-responsive">
                                                </div>
                                            </div>
                                            <div class="col-md-7 col-7">
                                                <%= pt.UserName %> <br/> <span class="text-muted">
                                                <small>Offline</small>
                                            </span>
                                            </div>
                                            <div class="col-md-3 col-3 text-right">
                                                <btn class="btn btn-sm btn-outline-success btn-round btn-icon"><i
                                                            class="fa fa-envelope"></i></btn>
                                            </div>
                                        </div>
                                    </li>
                                <% }
                                })
                                }) %>
                            </ul>
                        </div>
                    </div>
                    <!--Thẻ tác giả yêu thích-->
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Tác giả yêu thích</h4>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled team-members">

                                <% bigdata.forEach(function (pt) {
                                data[0].FavoriteAuthorList.forEach(function(phantu) {
                                if ( pt._id == phantu) {
                                %>

                                    <li>
                                        <div class="row">
                                            <div class="col-md-2 col-2">
                                                <div class="avatar">
                                                    <img src="<%= pt.Image %>">
                                                    alt="Circle Image"
                                                    class="img-circle img-no-padding img-responsive">
                                                </div>
                                            </div>
                                            <div class="col-md-7 col-7">
                                                <%= pt.UserName %> <br/> <span class="text-muted">
                                                <small>Offline</small>
                                            </span>
                                            </div>
                                            <% var k = 0;
                                            for(var i = 0 ; i < baiviet.length ; i++) {
                                            if (((baiviet[i]).PostBy == pt._id) && ((baiviet[i]).DateCreated > ((data[0].LovePostList)[i])[1])) {
                                                k = k + 1; %>
                                            <div class="col-md-3 col-3 text-right">
                                                <btn id="nut"
                                                     class="btn btn-sm btn-outline-info btn-round btn-icon"><i
                                                            id="nut" class="fa fa-bell-o""
                                                    aria-hidden="true"></i></btn>
                                            </div>
                                            <% }
                                                break;
                                            }
                                            if (k == 0){ %>
                                                <div class="col-md-3 col-3 text-right">
                                                    <btn id="nut"
                                                         class="btn btn-sm btn-outline-info btn-round btn-icon"><i
                                                                id="nut"
                                                                aria-hidden="true"></i></btn>
                                                </div>
                                            <% }
                                            %>
                                        </div>


                                    </li>
                                <% }
                                })
                                }) %>
                            </ul>
                        </div>
                    </div>
