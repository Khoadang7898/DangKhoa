                <!-- Thẻ thông tin cá nhân-->
                <div class="col-md-8">
                    <div class="card card-user">
                        <div >
                            <p style="text-align: left;color: #ff231c">
                                <% if( t == 3) { %>
                                    Mật khẩu không chính xác.Hãy nhập lại
                                <% } else  if ( t == 1) {%>
                                        Cập nhật thông tin thành công
                                <% } else if (t == 2) {%>
                                Đã thay đổi mật khẩu
                                <% }%>
                            </p>
                        </div>
                        <div class="card-header">
                            <h5 class="card-title">Chỉnh sữa thông tin</h5>
                        </div>
                        <div class="card-body">
                            <% data.forEach(function(pt) { %>

                                <form action="/users/personal-information" method="post">
                                    <div class="row">
                                        <div class="col-md-5 pr-1">
                                            <div class="form-group">
                                                <label>Cơ quan/Công ty/Tổ chức : </label> <input name="Company"
                                                                                                 type="text"
                                                                                                 class="form-control"
                                                                                                 placeholder="Nơi bạn đang làm việc/học tập"
                                                                                                 value="<%= pt.Company %>">
                                            </div>
                                        </div>
                                        <div class="col-md-3 px-1">
                                            <div class="form-group">
                                                <label>Tên người dùng</label> <input name="UserName" type="text"
                                                                                     class="form-control"
                                                                                     placeholder="Username"
                                                                                     value="<%= pt.UserName %>">
                                            </div>
                                        </div>
                                        <div class="col-md-4 pl-1">
                                            <div class="form-group">
                                                <label for="exampleInputEmail1">Địa chỉ Email</label> <input
                                                        name="Email"
                                                        type="email" class="form-control" placeholder="Email"
                                                        value="<%= pt.Email %>">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 pr-1">
                                            <div class="form-group">
                                                <label>Mật khẩu</label> <input name="password" type="password"
                                                                               class="form-control"
                                                                               placeholder="Mật khẩu" disabled
                                                                               value="<%= pt.password %>">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 pr-1">
                                            <h6 class="card-title">Thay đổi mật khẩu:</h6>
                                            <div class="form-group">
                                                <label>Nhập mật khẩu cần thay đổi</label> <input name="password1" type="password"
                                                                                        class="form-control"
                                                                                        placeholder="Mật khẩu"
                                                                                        >
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 pr-1">
                                            <div class="form-group">
                                                <label>Nhập lại mật khẩu</label> <input name="password2"
                                                                                            type="password"
                                                                                            class="form-control"
                                                                                            placeholder="Mật khẩu"
                                                >
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 pr-1">
                                            <div class="form-group">
                                                <label>Mật khẩu mới</label> <input name="password3"
                                                                                            type="password"
                                                                                            class="form-control"
                                                                                            placeholder="Mật khẩu"
                                                >
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 pr-1">
                                            <div class="form-group">
                                                <label>Họ và Chữ lót</label> <input name="LastName" type="text"
                                                                                    class="form-control"
                                                                                    placeholder="Company"
                                                                                    value="<%= pt.LastName %>">
                                            </div>
                                        </div>
                                        <div class="col-md-6 pl-1">
                                            <div class="form-group">
                                                <label>Tên</label> <input name="FirstName" type="text"
                                                                          class="form-control"
                                                                          placeholder="Last Name"
                                                                          value="<%= pt.FirstName %>">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Địa chỉ</label> <input name="Address" type="text"
                                                                              class="form-control"
                                                                              placeholder="Địa chỉ bạn đang ở"
                                                                              value="<%= pt.Address %>">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4 pr-1">
                                            <div class="form-group">
                                                <label>Thành phố</label> <input name="CityProvince" type="text"
                                                                                class="form-control"
                                                                                placeholder="Thành phố bạn đang sống"
                                                                                value="<%= pt.CityProvince %>">
                                            </div>
                                        </div>
                                        <div class="col-md-4 px-1">
                                            <div class="form-group">
                                                <label>Quốc gia</label> <input name="Country" type="text"
                                                                               class="form-control"
                                                                               placeholder="Quốc gia nơi bạn sống"
                                                                               value="<%= pt.Country %>">
                                            </div>
                                        </div>
                                        <div class="col-md-4 pl-1">
                                            <div class="form-group">
                                                <label>Postal Code</label> <input name="PostalCode" type="number"
                                                                                  class="form-control"
                                                                                  placeholder="ZIP Code"
                                                                                  value="<%= pt.PostalCode %>">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Mô tả bản thân </label> <textarea name="Description"
                                                                                         class="form-control textarea"
                                                                                         value="<%= pt.Description %>"><%= pt.Description %></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="update ml-auto mr-auto">
                                            <button type="submit" class="btn btn-primary btn-round">Cập nhật
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            <% }) %>

                        </div>
                    </div>
                    <!-- Thẻ bài viết yêu thích-->
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title"> Bài viết yêu thích</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead class=" text-primary">
                                    <th>
                                        Tiêu đề/Chủ đề
                                    </th>
                                    <th>
                                        Tác giả
                                    </th>
                                    <th>
                                        Ngày đánh dấu
                                    </th>
                                    <th>
                                        Ngày cập nhật gần nhất
                                    </th>

                                    </thead>
                                    <tbody>
                                    <% baiviet.forEach(function (bv) { %>
                                        <tr>
                                            <td>
                                                <%= bv.Title %>
                                            </td>
                                            <% bigdata.forEach(function (user) {
                                            if (bv.PostBy == user._id) {
                                            %>
                                                <td>
                                                    <%= user.UserName %>
                                                </td>
                                            <% }
                                            }) %>
                                            <td>
                                                May, 22 2019
                                            </td>
                                            <td>
                                                <%= bv.DateCreated.toDateString() %>
                                            </td>
                                        </tr>
                                    <% }) %>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

            <!--Thêm footer-->
            <%- include ../partials/footer_account_manager.ejs %>
        </div>

    </div>
</div>
